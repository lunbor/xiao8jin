<template name="3fd3fd45">
  <view class="_view data-v-5e264379 page">
    <view class="_view data-v-5e264379 feedback-title">
      <text class="_text data-v-5e264379">问题和意见</text>
      <text class="_text data-v-5e264379 feedback-quick" bindtap="handleProxy" data-eventid="{{'Bfj-0'}}" data-comkey="{{$k}}">快速键入</text>
    </view>
    <view class="_view data-v-5e264379 feedback-body">
      <textarea placeholder="请详细描述你的问题和意见..." value="{{sendDate.content}}" bindinput="handleProxy" class="_textarea data-v-5e264379 feedback-textare" data-eventid="{{'piK-1'}}" data-comkey="{{$k}}" />
    </view>
    <view class="_view data-v-5e264379 feedback-title">
      <text class="_text data-v-5e264379">图片(选填,提供问题截图,总大小10M以下)</text>
    </view>
    <view class="_view data-v-5e264379 feedback-body feedback-uploader">
      <view class="_view data-v-5e264379 uni-uploader">
        <view class="_view data-v-5e264379 uni-uploader-head">
          <view class="_view data-v-5e264379 uni-uploader-title">点击预览图片</view>
          <view class="_view data-v-5e264379 uni-uploader-info">{{imageList.length}}/8</view>
        </view>
        <view class="_view data-v-5e264379 uni-uploader-body">
          <view class="_view data-v-5e264379 uni-uploader__files">
            <block wx:key="index" key="{{index}}" wx:for="{{imageList}}" wx:for-index="index" wx:for-item="image">
              <view class="_view data-v-5e264379 uni-uploader__file" style="position: relative;">
                <image class="_image data-v-5e264379 uni-uploader__img" src="{{image}}" bindtap="handleProxy" data-eventid="{{'lX9-2-'+index}}" data-comkey="{{$k}}"></image>
                <view class="_view data-v-5e264379 close-view" bindtap="handleProxy" data-eventid="{{'3Gp-3-'+index}}" data-comkey="{{$k}}">x</view>
              </view>
            </block>
            <view class="_view data-v-5e264379 uni-uploader__input-box" hidden="{{!(imageList.length < 8)}}">
              <view class="_view data-v-5e264379 uni-uploader__input" bindtap="handleProxy" data-eventid="{{'FBn-4'}}" data-comkey="{{$k}}"></view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="_view data-v-5e264379 feedback-title">
      <text class="_text data-v-5e264379">QQ/邮箱</text>
    </view>
    <view class="_view data-v-5e264379 feedback-body">
      <input class="_input data-v-5e264379 feedback-input" value="{{sendDate.contact}}" bindinput="handleProxy" placeholder="(选填,方便我们联系你 )" data-eventid="{{'7y8-5'}}" data-comkey="{{$k}}" />
    </view>
    <view class="_view data-v-5e264379 feedback-title feedback-star-view">
      <text class="_text data-v-5e264379">应用评分</text>
      <view class="_view data-v-5e264379 feedback-star-view">
        <text class="_text data-v-5e264379 feedback-star {{key < sendDate.score ? 'active' : ''}}" wx:key="key" key="{{key}}" bindtap="handleProxy" data-eventid="{{'T4h-6-'+key}}" data-comkey="{{$k}}" wx:for="{{stars}}" wx:for-index="key" wx:for-item="value"></text>
      </view>
    </view>
    <button type="primary" class="_button data-v-5e264379 feedback-submit" bindtap="handleProxy" data-eventid="{{'g8o-7'}}" data-comkey="{{$k}}">提交</button>
    <view class="_view data-v-5e264379 feedback-title">
      <text class="_text data-v-5e264379">感谢您对红豆管家支持和理解，谢谢您的宝贵意见！</text>
    </view>
  </view>
</template>