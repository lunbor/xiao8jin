
page {
	height: auto;
	min-height: 100%;
	background-color: #F2F2F2;
}
.by-bg-title{color: #333; height: 90rpx; line-height: 90rpx;  padding-left: 34rpx;}
.uni-card.by-card {
	border-radius: 12rpx;
	-webkit-box-shadow: 4rpx 4rpx 20rpx 4rpx rgba(0, 37, 174, 0.2);
	box-shadow: 4rpx 4rpx 20rpx 4rpx rgba(0, 37, 174, 0.2);
}
.by-dj-btn{ color: #666666; border: 2rpx #d7d5d5 solid; padding: 14rpx 20rpx;height: 30rpx; line-height: 30rpx; border-radius: 500px; 
margin-top: 10rpx; margin-right: 15rpx;font-size: 24rpx;}
.by-dj-btn.active{-webkit-box-ordinal-group: 3;-webkit-order: 2rpx #f7f8fa solid;-ms-flex-order: 2rpx #f7f8fa solid;order: 2rpx #f7f8fa solid;color:#d7d5d5;}
.by-button-submit {
	background-color: #32b0fd;
	background: -webkit-gradient(linear, left top, right top, from(#32b0fd), to(#097ede));
	background: -o-linear-gradient(left, #32b0fd, #097ede);
	background: linear-gradient(left, #32b0fd, #097ede);
	border-radius: 500px;
	-webkit-box-shadow: 4rpx 4rpx 20rpx 4rpx rgba(50, 176, 253, 0.4);
	box-shadow: 4rpx 4rpx 20rpx 4rpx rgba(50, 176, 253, 0.4);
	margin-top: 60rpx;
}

