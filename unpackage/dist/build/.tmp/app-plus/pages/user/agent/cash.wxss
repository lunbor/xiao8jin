
page {
	height: auto;
	min-height: 100%;
	background-color: #f2f2f2;
}
.uni-card.by-card {
	border-radius: 12rpx;
	-webkit-box-shadow: 4rpx 4rpx 20rpx 4rpx rgba(0, 37, 174, 0.2);
	box-shadow: 4rpx 4rpx 20rpx 4rpx rgba(0, 37, 174, 0.2);
}
.uni-card.by-card .p15 {
	padding: 0rpx 16rpx;
}
.by-sdh {
	width: 120rpx;
	height: 52rpx;
	color: #576175;
	font-weight: 600;
	margin-right: 30rpx;
	text-align: justify;
	font-size: 24rpx;
	line-height: 52rpx;
}
.by-sdh text {
	display: inline-block;
	height: 0rpx;
	width: 100%;
}
.hg50 .uni-navigate-right:after {
	font-size: 32rpx;
}
.hg50 .uni-list-cell-navigate {
	line-height: 80rpx;
	border-bottom: 2rpx solid #ecedef;
}

