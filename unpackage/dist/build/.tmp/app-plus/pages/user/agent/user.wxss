
page {
	height: auto;
	min-height: 100%;
	background-color: #F2F2F2;
}
.my_team{margin: 30rpx;background-color: #fff;padding: 30rpx 0;border-radius: 12rpx;-webkit-box-shadow: 4rpx 4rpx 20rpx 4rpx rgba(0, 37, 174, 0.2);
	box-shadow: 4rpx 4rpx 20rpx 4rpx rgba(0, 37, 174, 0.2);}
.my_team_info{background-color: #5a91fe;padding: 20rpx;border-radius: 12rpx;color: #fff;margin: 0 30rpx;}
.my_team_info .flex-item{-webkit-box-flex: 1;-webkit-flex: 1;-ms-flex: 1;flex: 1;}
.my_team_info .name{font-size: 24rpx;}
.my_team_info .name uni-text{font-size: 30rpx;}
.my_team_lists{padding-left: 30rpx;}
.my_team_list{padding: 30rpx 0 0rpx 0;}
.my_team_listInfo{border-bottom: 1px solid #ECECEC;-webkit-box-flex:1 ;-webkit-flex:1 ;-ms-flex:1 ;flex:1 ;padding-bottom: 10rpx;color: #666;}
.my_team_listInfo .flex-item{font-size: 22rpx;line-height: 2;}
.my_team_listInfo .w40{width: 45%;-o-text-overflow: ellipsis;text-overflow: ellipsis;overflow: hidden;white-space: nowrap;}
.my_team_listInfo .w30{width: 30%;-o-text-overflow: ellipsis;text-overflow: ellipsis;overflow: hidden;white-space: nowrap;}
.my_team_listInfo .w25{width: 25%;-o-text-overflow: ellipsis;text-overflow: ellipsis;overflow: hidden;white-space: nowrap;}
.my_team_listInfo .w55{width: 55%;-o-text-overflow: ellipsis;text-overflow: ellipsis;overflow: hidden;white-space: nowrap;}
.my_team_list .uni-list-cell-navigate.uni-navigate-right:after{right: 10rpx;}
.head-pic{ border-radius:50%; height: 60rpx; width: 60rpx; overflow: hidden;margin-top: 12rpx;}
.head-pic image{ width: 60rpx; height: 60rpx;}
.no-list{ text-align: center; height: 260rpx; padding-top: 50%;}
.no-list image{width: 370rpx; height: 260rpx;}

