
.uni-mask {
  position: fixed;
  z-index: 998;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, .3);
}
.uni-popup {
  position: absolute;
  z-index: 999;
  background-color: #ffffff;
  box-shadow: 0 0 30rpx rgba(0, 0, 0, .1);
}
.uni-popup-middle {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  width: 640rpx;
  min-height: 380rpx;
  border-radius: 30rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  overflow: hidden;
}
.uni-popup-middle .title {
  background-color: #f4f4f4;
  height: 110rpx;
  border-bottom: 2rpx solid #e1e1e1;
  width: 100%;
  text-align: center;
  color: #595d68;
  line-height: 110rpx;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.uni-popup-middle .title .text {
  line-height: 110rpx;
  font-size: 32rpx;
}
.uni-popup-middle .uni-icon-closeempty {
  line-height: 110rpx;
  font-size: 82rpx;
}
.uni-popup-middle .by-content {
  text-align: left;
  padding: 20rpx;
  color: #0f0f0f;
  overflow: scroll;
  max-height: 500rpx;
  min-height: 80rpx;
}
.uni-popup-middle .by-button {
  padding: 25rpx 0;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
}
.uni-popup-middle .mini-btn {
  width: 268rpx;
}
.uni-popup-middle .quxiao-btn {
  background: #fff;
  margin-right: 10rpx;
  color: #576175;
  border-color: #e1e1e1;
}
.uni-popup-middle .queren-btn {
  background: #fe5950;
  margin-left: 10rpx;
}
.uni-popup-top {
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
.uni-popup-bottom {
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 30rpx 0rpx;
  text-align: center;
}
.pickerMask {
  position: fixed;
  z-index: 1000;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}
.mpvue-picker-content {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  -webkit-transition: all 0.3s ease;
  transition: all 0.3s ease;
  -webkit-transform: translateY(100%);
  transform: translateY(100%);
  z-index: 3000;
}
.mpvue-picker-view-show {
  -webkit-transform: translateY(0);
  transform: translateY(0);
}
.mpvue-picker__hd {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 9px 15px;
  background-color: #fff;
  position: relative;
  text-align: center;
  font-size: 17px;
}
.mpvue-picker__hd:after {
  content: ' ';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 100%;
  transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}
.mpvue-picker__action {
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #1aad19;
}
.mpvue-picker__action:first-child {
  text-align: left;
  color: #888;
}
.mpvue-picker__action:last-child {
  text-align: right;
}
.picker-item {
  text-align: center;
  line-height: 40px;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 16px;
}
.mpvue-picker-view {
  position: relative;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 238px;
  background-color: rgba(255, 255, 255, 1);
}