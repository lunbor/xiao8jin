@import "../../../common/vendor.wxss";

page {
  background-color: #EFEFF4;
}
.input-view {
  font-size: 28rpx;
}
.feedback-submit {
  background-color: #fd5950;
  background: -webkit-linear-gradient(left, #ff7575, #fd5950);
  background: linear-gradient(left, #ff7575, #fd5950);
}
.close-view {
  text-align: center;
  line-height: 14px;
  height: 16px;
  width: 16px;
  border-radius: 50%;
  background: #FF5053;
  color: #FFFFFF;
  position: absolute;
  top: -6px;
  right: -4px;
  font-size: 12px;
}