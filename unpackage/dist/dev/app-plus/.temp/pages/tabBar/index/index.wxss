@import "../../../common/vendor.wxss";

page {
  height: auto;
  min-height: 100%;
}
.uni-icon-info-filled {
  color: #fe5950;
  font-size: 26rpx;
}
.uni-header-logo {
  height: 568rpx;
}
.uni-header-logo image {
  width: 100%;
  height: 568rpx;
}
.by-home-icons {
  margin-top: 30rpx;
}
.ls4 {
  width: 25%;
  height: 130rpx;
  text-align: center;
}
.ls4 image {
  width: 72rpx;
  height: 72rpx;
}
.uni-card-red {
  background: -webkit-linear-gradient(left, #ff7575, #fe5950);
  background: linear-gradient(to right, #ff7575, #fe5950);
  border-radius: 15rpx;
  color: #fff;
  min-height: 260rpx;
  margin-top: 50rpx;
  overflow: hidden;
}
.ls4 .uni-title {
  padding: 0rpx;
}
.uni-card .lf7 {
  width: 74%;
  font-weight: 500;
  font-size: 32rpx;
}
.uni-card .rg3 {
  width: 26%;
}
.mini-btn {
  width: 160rpx;
  height: 55rpx;
  background-color: #fe5950 !important;
  background: transparent !important;
}
.mini-btn:after {
  border: 5rpx solid #FFFFFF;
}
.linebg {
  background: #EEEEEE;
  height: 2rpx;
  line-height: 2rpx;
  padding: 0rpx;
  width: 90%;
  margin: 0 auto;
  opacity: 0.5;
}
.pd15 {
  padding: 28rpx 30rpx;
}
.ls3 {
  width: 33.33%;
  height: 140rpx;
  text-align: center;
  margin-top: 15rpx;
}
.ls3-row text {
  font-size: 36rpx;
  font-weight: 500;
}
.swiper {
  height: 220rpx;
  border-radius: 15rpx;
}
.swiper-item {
  display: block;
  height: 220rpx;
  line-height: 220rpx;
  text-align: center;
  border-radius: 15rpx;
}
.swiper-item image {
  width: 100%;
  height: 220rpx;
}
.by-mt-20 {
  margin-top: 50rpx;
}
.textbx {
  margin: 15rpx 10rpx;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #777;
  font-size: 26rpx;
}