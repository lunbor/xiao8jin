    <view class="_view data-v-d82945f6 uni-padding-wrap uni-common-pb">
      <form bindsubmit="handleProxy" data-eventid="{{'FRs-3'}}" data-comkey="{{$k}}" class="_form data-v-d82945f6">
        <view class="_view data-v-d82945f6 uni-form-item uni-column">
          <view class="_view data-v-d82945f6 with-fun by-login-input">
            <input class="_input data-v-d82945f6 uni-input" type="number" name="smsCode" placeholder="请填入验证码" value="{{smsCode}}" bindinput="handleProxy" data-eventid="{{'ojk-0'}}" data-comkey="{{$k}}" />
