/* 遮罩层 */
.uni-mask {
	background: rgba(0, 0, 0, 0.6);
	position: fixed;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	z-index: 1;
}
.tip_cancel {
	text-align: center;
}
.tip_cancel image {
	width: 70rpx;
	height: 123rpx;
}

