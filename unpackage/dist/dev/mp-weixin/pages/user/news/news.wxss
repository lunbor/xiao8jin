
page {
	height: auto;
	min-height: 100%;
	background-color: #f7f8fa;
}
.list-view {
	padding:0rpx 0;
	width: 100%;
}
.list-item {
	margin: 0rpx 0rpx 10rpx 0rpx;
	height: 150rpx;
	padding: 20rpx 30rpx;
	border-bottom: 2rpx solid #eee;
	border-top: 2rpx solid #eee;
	text-align: left;
	background:#FFF;
}
.justify{width: 680rpx; padding: 0rpx;}
.news-title{font-size: 32rpx;line-height: 50rpx;font-weight: 500;}
.news-data{width: 650rpx;  height: 50rpx; line-height: 50rpx; overflow: hidden;-o-text-overflow:ellipsis;text-overflow:ellipsis; font-size: 24rpx;  color: #666666;white-space:nowrap}
.news-time{width: 650rpx;color: #b0b0b0; height: 50rpx; line-height: 50rpx;font-size: 24rpx;
}
.news-tip{ width: 16rpx; padding-right: 20rpx; padding-top: 16rpx;}
.tip-yd{ background-color: #fe5950; border-radius: 50%; width: 16rpx; height: 16rpx;}
.uni-list-cell-navigate.uni-navigate-right:after{ font-size: 40rpx;line-height: 50rpx;}
.no-list{ text-align: center; height: 260rpx; padding-top: 50%;}
.no-list image{width: 185rpx; height: 60rpx;}

